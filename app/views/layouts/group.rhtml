<html>
<head>
	<title><%= @setting[:meta_title] %></title>
	<meta name="keywords" content="<%= @setting[:meta_keywords] %>">
	<meta name="description" content="<%= @setting[:meta_description] %>">
    <%= stylesheet_link_tag 'bxr' %>
    <%= javascript_include_tag 'application' %>
    <script type="text/javascript">
        if(IE)
        {
            window.onload = ResizeContentDiv;
            window.onresize = ResizeContentDiv;
        }
    </script>
</head>
<body>

    <div id="top">
        <div class="header">
        	<div class="headerContent">
                <%= render :partial =>  'shared/header_content' %>
        	</div>        	
            <div class="userSettings">
                <%= render :partial =>  'shared/logged_in_user_menu' %>
            </div>

            <div class="search">
                <%= render :partial =>  'shared/search_form' %>
            </div>
        </div>

        <div class="topNavigation">
            <div class="links">
                <%= render :partial =>  'shared/go_to_menu' %>
            </div>
        </div>
    </div>

    <div id="middle">
        <div class="actionLinks">
            <% if @logged_in_user.is_admin? %>
            	<%= link_to 'Create group', { :action => 'new' } %>
		    	<div class="actionLinkSpacer"></div>			
            <% end %>
        </div>

        <div class="content">
			<div class="flash_notice">
				<% if flash[:notice] %>
					<%= flash[:notice] %>
				<% end %>
			</div>        	
            <table cellspacing="0" cellpadding="0">
                <tr>
                    <td>
                        <%= yield %>
                    </td>
                </tr>
            </table>
        </div>
    </div>

	<%= render :partial => "/shared/footer" %>

</body>
</html>